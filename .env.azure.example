APP_NAME="Festa Design Studio"
APP_ENV=production
APP_KEY=base64:your-app-key-will-be-generated
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://your-app-name.azurewebsites.net

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Azure MySQL Database
DB_CONNECTION=mysql
DB_HOST=your-mysql-server.mysql.database.azure.com
DB_PORT=3306
DB_DATABASE=your-database-name
DB_USERNAME=your-database-username
DB_PASSWORD=your-database-password

# Session Configuration for Azure
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting
BROADCAST_CONNECTION=log

# Cache Configuration for Azure
CACHE_STORE=database
CACHE_PREFIX=festa_

# Queue Configuration
QUEUE_CONNECTION=database

# Mail Configuration (if needed)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Vite Configuration for Azure
VITE_APP_NAME="${APP_NAME}"